{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "pipeline_name": {
            "type": "string"
        },
        "dev-region": {
            "description": {
                "$ref": "#/messages/deploy.region"
            },
            "type": "string",
            "validator": {
                "v-type": "cf-region",
                "params": [
                    "api-key"
                ]
            }
        },
        "dev-organization": {
            "description": {
                "$ref": "#/messages/deploy.org"
            },
            "type": "string",
            "validator": {
                "v-type": "cf-org",
                "params": [
                    "dev-region"
                ]
            }
        },
        "dev-space": {
            "description": {
                "$ref": "#/messages/deploy.space"
            },
            "type": "string",
            "validator": {
                "v-type": "cf-space",
                "params": [
                    "dev-organization"
                ]
            }
        },
        "api-key": {
            "description": {
                "$ref": "#/messages/deploy.apiKeyDescription"
            },
            "type": "string",
            "validator": {
                "v-type": "api-key"
            }
        },
        "assistant-api-key": {
            "description": {
                "$ref": "#/messages/deploy.assistantApiKeyDescription"
            },
            "type": "string"
        },
        "assistant-id": {
            "description": {
                "$ref": "#/messages/deploy.assistantIdDescription"
            },
            "type": "string"
        },
        "assistant-url": {
            "description": {
                "$ref": "#/messages/deploy.assistantUrlDescription"
            },
            "type": "string"
        },
        "username": {
            "description": {
                "$ref": "#/messages/deploy.usernameDescription"
            },
            "type": "string"
        }
    },
    "required": [
        "dev-region",
        "dev-organization",
        "dev-space",
        "api-key",
        "assistant-api-key",
        "assistant-id",
        "assistant-url",
        "username"
    ],
    "form": [
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.form.username"
            },
            "key": "username"
        },
        {
            "type": "validator",
            "url": "/devops/validator/validator-v1.html"
        },
        {
            "type": "password",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.apiKeyTitle"
            },
            "key": "api-key"
        },
        {
            "type": "select",
            "key": "dev-region"
        },
        {
            "type": "select",
            "key": "dev-organization"
        },
        {
            "type": "select",
            "key": "dev-space",
            "readonly": false
        },
        {
            "type": "text",
            "readonly": true,
            "title": {
                "$ref": "#/messages/deploy.form.description"
            },
            "key": "pipeline_name"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.form.apikey"
            },
            "key": "assistant-api-key"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.form.assistant_id"
            },
            "key": "assistant-id"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.form.url"
            },
            "key": "assistant-url"
        }
    ]
}